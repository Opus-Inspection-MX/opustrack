{
  "name": "opustrack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:generate": "pnpm exec dotenv -e .env -- prisma generate --schema=apps/api/prisma/schema.prisma",
    "prisma:migrate": "pnpm exec dotenv -e .env -- prisma migrate dev --schema=apps/api/prisma/schema.prisma",
    "prisma:reset": "pnpm exec dotenv -e .env -- prisma migrate reset --schema=apps/api/prisma/schema.prisma",
    "prisma:seed": "pnpm exec dotenv -e .env -- tsx apps/api/prisma/seed.ts"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
